<%= link_to t('currency.click_and_create'), new_currency_path  %>
<ul>
  <% @currencies.each do |currency| %>
    <li>
      <%= currency.code %>
      <%= link_to t('currency.edit'), edit_currency_path(currency) %>
      <%= link_to t('currency.delete'), currency_path(currency), method: :delete %>
    </li>
  <% end %>
</ul>
