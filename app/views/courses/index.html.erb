<%= link_to t('course.click_and_create'), new_course_path  %>
<ul>
  <% @courses.each do |course| %>
    <li>
      <%= link_to course.title, course_path(course) %>
      <%= link_to t('course.edit'), edit_course_path(course) %>
      <%= link_to t('course.delete'), course_path(course), method: :delete %>
    </li>
  <% end %>
</ul>
