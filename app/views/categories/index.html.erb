<%= link_to t('category.click_and_create'), new_category_path  %>
<ul>
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= link_to t('category.edit'), edit_category_path(category) %>
      <%= link_to t('category.delete'), category_path(category), method: :delete %>
    </li>
  <% end %>
</ul>
